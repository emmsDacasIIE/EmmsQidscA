<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/page2section1"
             android:layout_width="280dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_transparent_selector"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page2section2"
             android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/blue_transparent_selector" 
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/page2section3"
             android:layout_width="280dp"
            android:layout_height="200dp"
			android:background="@drawable/blue_transparent_selector"
			android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page2section4"
             android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/blue_transparent_selector"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/page2section5"
              android:layout_width="280dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_transparent_selector"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page2section6"
             android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/blue_transparent_selector" 
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>