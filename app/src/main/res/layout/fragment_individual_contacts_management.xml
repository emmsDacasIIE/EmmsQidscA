<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rootblock_sub_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/backupContactsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_view_rounded_single" >

        <ImageView
            android:id="@+id/contactIconImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/backup_contact_local" />

        <TextView
            android:id="@+id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contactIconImageView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/contactIconImageView"
            android:text="通讯录备份"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mediumblue" />

        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/contactIconImageView"
            android:layout_alignLeft="@id/tv10"
            android:text="将手机通讯录加密保存在本地" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restoreContactsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/backupContactsRelativeLayout"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_view_rounded_single" >

        <ImageView
            android:id="@+id/restoreContactsImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/revert_contact_local" />

        <TextView
            android:id="@+id/tv20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/restoreContactsImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/restoreContactsImageView"
            android:text="通讯录恢复"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mediumblue" />

        <TextView
            android:id="@+id/tv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/restoreContactsImageView"
            android:layout_alignLeft="@id/tv20"
            android:text="恢复已备份的手机通讯录" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/backupSmsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/restoreContactsRelativeLayout"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_view_rounded_single" >

        <ImageView
            android:id="@+id/backupSmsImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/backup_message_local" />

        <TextView
            android:id="@+id/tv30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/backupSmsImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/backupSmsImageView"
            android:text="短信备份"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mediumblue" />

        <TextView
            android:id="@+id/tv31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/backupSmsImageView"
            android:layout_alignLeft="@id/tv30"
            android:text="将手机短信加密保存到本地" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restoreSmsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/backupSmsRelativeLayout"
        android:layout_margin="20dp"
        android:background="@drawable/background_view_rounded_single" >

        <ImageView
            android:id="@+id/restoreSmsImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/revert_message_local" />

        <TextView
            android:id="@+id/tv40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/restoreSmsImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/restoreSmsImageView"
            android:text="短信恢复"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mediumblue" />

        <TextView
            android:id="@+id/tv41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/restoreSmsImageView"
            android:layout_alignLeft="@id/tv40"
            android:text="恢复已备份的手机短信" />
    </RelativeLayout>

</LinearLayout>