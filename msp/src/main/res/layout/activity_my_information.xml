<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/my_information_background"
    android:orientation="vertical" >


<ScrollView

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >




    <!-- 1. 第一组 layout-->

    <LinearLayout
        android:id="@+id/layout_group1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:paddingLeft="0dp"

        android:background="@color/white"
        android:visibility="visible">


        <!-- 1.1. 头像-->
        <LinearLayout
            android:id="@+id/ll_myphoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="00dp"
            android:paddingTop="14dp">

            <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
                android:id="@+id/myphoto_sublayout">

            <TextView
                android:id="@+id/textview_myphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:text="@string/my_photo"
                android:textSize="16sp" />

            <cn.qdsc.msp.ui.qdlayout.RoundImageView
                android:id="@+id/imageview_myphoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/msp_my_account_photo" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"

            android:background="@color/item_line_color" />

        <!-- 1.2. 姓名-->
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_myname_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"

                android:paddingLeft="20dp"
                android:text="@string/my_name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_myname_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="mynamevalue"
                 />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/item_line_color" />

        <!-- 1.3. 帐号-->
        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >


            <TextView
                android:id="@+id/textview_account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/my_account"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/imageview_account_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="accountvalue"
                />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/item_line_color" />

        <!-- 1.4. 所属组-->
        <LinearLayout
            android:id="@+id/ll_mygroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="0dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_group_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/my_group"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/imageview_group_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="group"

                />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/item_line_color" />

        <!-- 1.5. 邮箱-->
        <LinearLayout
            android:id="@+id/ll_myemail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="0dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_myemail_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:paddingLeft="20dp"
                android:text="@string/my_email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_myemail_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="test@email.com"

                />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/item_line_color" />

        <!-- 1.6. 电话-->
        <LinearLayout
            android:id="@+id/ll_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_phonenumber_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:paddingLeft="20dp"
                android:text="@string/my_tel_number"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_phonenumber_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="123456"
                android:textSize="16sp"
                />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 2. 第二组 -->
    <LinearLayout
        android:id="@+id/layout_group2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="0dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp">


        <!-- 2.1. 角色-->
        <LinearLayout
            android:id="@+id/ll_role"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="0dp"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_role_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/my_role"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/imageview_role_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="role"
                android:textSize="16sp"

                />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/item_line_color" />

        <!-- 2.2. 是否责任人-->
        <LinearLayout
            android:id="@+id/ll_duty_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_duty_account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:paddingLeft="20dp"
                android:text="@string/my_duty"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/imageview_duty_account_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="duty"
                android:textSize="16sp"
                />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>