<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/float_window_items"
        android:src="@drawable/float_window_items"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/float_window_circle"
        android:src="@mipmap/float_window_circle_normal"
        android:layout_toRightOf="@id/float_window_items"
        android:layout_alignBottom="@id/float_window_items"
        android:layout_marginLeft="-24dp"/>
</RelativeLayout>