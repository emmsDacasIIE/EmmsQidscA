<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:visibility="visible"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/textview_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/prompt_setting_device_user"
            android:textSize="14sp"
            android:gravity="center"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginTop="36dp"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/button_yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/button_positive"
            android:gravity="center"
            android:text="@string/prompt_btn_yes"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_positive_default_red"
            android:gravity="center"
            android:text="@string/prompt_btn_no"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>