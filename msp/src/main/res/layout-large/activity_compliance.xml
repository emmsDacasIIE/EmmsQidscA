<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/compliance_main_linearlayout">
        <LinearLayout
            android:id="@+id/layout_compliance_main"
            android:layout_width="wrap_content"
            android:layout_height="300dp"

            android:layout_gravity="top|center_horizontal"
            android:background="@mipmap/bg_compliance_pad"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="80dp">
            <ImageView
                android:id="@+id/image_compliance_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="right"
                android:src="@mipmap/img_compliance_close"/>

            <FrameLayout
                android:paddingTop="20dp"

                android:id="@+id/layout_compliance_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_compliance_scan"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/img_compliance_scan" />

                <ImageView
                    android:id="@+id/image_compliance_finish"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/img_compliance_finish"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/text_compliance_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="100"
                    android:textSize="40sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_compliance_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="查看结果"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:visibility="invisible"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_compliance_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="60dp"

                android:layout_marginBottom="8dp"

                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="value" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
